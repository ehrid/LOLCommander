<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/player_space" >

            <ImageView
                android:id="@+id/playerPicture"
                android:layout_width="@dimen/player_icon_size"
                android:layout_height="@dimen/player_icon_size"
                android:src="@drawable/no" />

            <ImageView
                android:id="@+id/playerLevel"
                android:layout_width="@dimen/player_skill_size"
                android:layout_height="@dimen/player_skill_size"
                android:layout_marginLeft="@dimen/player_level_margin"
                android:layout_marginTop="@dimen/player_level_margin"
                android:src="@drawable/plus" />

            <TextView
                android:id="@+id/playerLevelCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/player_level_margin"
                android:text="1"
                android:textColor="@color/text_white"
                android:textSize="@dimen/player_text_spell_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/player_space" >

            <ImageView
                android:id="@+id/playerUlti"
                android:layout_width="@dimen/player_icon_size"
                android:layout_height="@dimen/player_icon_size"
                android:src="@drawable/no" />

            <TextView
                android:id="@+id/playerUltiTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/text_white"
                android:textSize="@dimen/player_text_spell_size" />

            <ImageView
                android:id="@+id/playerUltiCancel"
                android:layout_width="@dimen/player_skill_size"
                android:layout_height="@dimen/player_skill_size"
                android:layout_marginLeft="@dimen/player_level_margin"
                android:layout_marginTop="@dimen/player_level_margin"
                android:src="@drawable/cancel" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/player_space" >

            <ImageView
                android:id="@+id/playerSpell1"
                android:layout_width="@dimen/player_icon_size"
                android:layout_height="@dimen/player_icon_size"
                android:src="@drawable/no" />

            <TextView
                android:id="@+id/playerSpell1Timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/text_white"
                android:textSize="@dimen/player_text_spell_size" />
            
            <ImageView
                android:id="@+id/playerSpell1Cancel"
                android:layout_width="@dimen/player_skill_size"
                android:layout_height="@dimen/player_skill_size"
                android:layout_marginLeft="@dimen/player_level_margin"
                android:layout_marginTop="@dimen/player_level_margin"
                android:src="@drawable/cancel" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/player_space" >

            <ImageView
                android:id="@+id/playerSpell2"
                android:layout_width="@dimen/player_icon_size"
                android:layout_height="@dimen/player_icon_size"
                android:src="@drawable/no" />

            <TextView
                android:id="@+id/playerSpell2Timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/text_white"
                android:textSize="@dimen/player_text_spell_size" />
            
            <ImageView
                android:id="@+id/playerSpell2Cancel"
                android:layout_width="@dimen/player_skill_size"
                android:layout_height="@dimen/player_skill_size"
                android:layout_marginLeft="@dimen/player_level_margin"
                android:layout_marginTop="@dimen/player_level_margin"
                android:src="@drawable/cancel" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/player_space" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/player_space_small" >

                    <ImageView
                        android:id="@+id/playerSkill1"
                        android:layout_width="@dimen/player_skill_size"
                        android:layout_height="@dimen/player_skill_size"
                        android:src="@drawable/no" />

                    <TextView
                        android:id="@+id/playerSkill1Timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/player_text_skill_size"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/player_space_small" >

                    <ImageView
                        android:id="@+id/playerSkill2"
                        android:layout_width="@dimen/player_skill_size"
                        android:layout_height="@dimen/player_skill_size"
                        android:src="@drawable/no" />

                    <TextView
                        android:id="@+id/playerSkill2Timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/player_text_skill_size"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/player_space_small" >

                    <ImageView
                        android:id="@+id/playerSkill3"
                        android:layout_width="@dimen/player_skill_size"
                        android:layout_height="@dimen/player_skill_size"
                        android:src="@drawable/no" />

                    <TextView
                        android:id="@+id/playerSkill3Timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/player_text_skill_size"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/player_space_small" >

                    <ImageView
                        android:id="@+id/playerCDR"
                        android:layout_width="@dimen/player_skill_size"
                        android:layout_height="@dimen/player_skill_size"
                        android:src="@drawable/no" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>